body
  background-color: #eee

header
  position: fixed
  left 0
  top 0
  width 10rem
  height 1rem

  ul
    display -webkit-box-flex
    display -moz-box-flex
    display flex
    flex-direction row
    width inherit
    height inherit

    li
      -webkit-flex 1
      -ms-flex 1
      -moz-box-flex 1
      box-sizing border-box
      height 100%
      border-top: 2px solid transparent
      text-align center

      span
        display block
        margin auto
        line-height 1rem
        font-size 0.4rem

    li+li
      border-left:1px solid #9d9d9d

    li.current
      border-top-color #ff0036

section
  margin-top 1rem

  .container
    img
      width:10rem

    h3
      margin-bottom:1rem
      font-size 0.4rem
      color #3c3c3c

    .price
      font-size 0.5rem
      color #ff0000;

    .custom
      width 10rem
      height 3rem
      margin-bottom 0.3rem
      background-color: #eee

        p
          font-size 0.5rem


    .des
      padding 0.3rem
      background-color: #cfcfcc
      font-size 0.5rem

button
  position fixed
  bottom 1rem
  display block
  left 0.5rem
  width 0.6rem
  height: 0.6rem
  border none
  outline: none
  border-radius 50%
  background-color: rgba(0,0,0,0.3)

  &::after
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background url("../img/cart.png") no-repeat 0 0








  