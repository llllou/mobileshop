body
  width 100%
  height 100%

header
  position fixed
  left 0
  z-index 99
  padding-bottom: 0.1rem
  width: 10rem
  background #ff0036;
  -webkit-background-size: 100%
  background-size 100%

  .logo
    margin 0 auto
    width logoWidth = 2.82666rem
    height .653333rem
    background: url("https://gw.alicdn.com/tfs/TB1HWNORFXXXXciaXXXXXXXXXXX-800-140.png") no-repeat center
    background-size cover

  .menu
    position absolute
    width .6rem
    height .6rem
    top 0.1rem
    left .25rem
    background: url("../img/menu.png") no-repeat center
    background-size cover

  .search
    display block
    position relative
    margin 0.2rem auto 0
    width 90%
    height 0.8rem

    input
      display block
      padding 0 0 0 0.8rem
      width 100%
      height: 100%
      outline: none
      border 0

  .search::before
    content ""
    position absolute
    left 0.05rem
    top 0.13rem
    width: .6rem
    height: .6rem
    background url(../img/search_32px_1187938_easyicon.net.png) no-repeat 0 0
    background-size cover

  .search::after
    content ""
    clear both
    width: 100%

  aside
    display none;
    position fixed
    left -8rem
    top 0
    z-index: 999
    height 100%
    width 8rem
    background-color: #e1e1e1

    .mask
      position fixed
      top 0
      right 0
      padding-left 1rem
      width 2rem
      height 100%
      background-color: rgba(0, 0, 0, 0.3)
      font-size 12px
      color white
      writing-mode vertical-lr
      text-align center


    h1
      float left
      margin-top 0
      margin-bottom 0
      width 100%
      height:1rem
      border-bottom 1px solid #3c3c3c
      font-size 0.4rem
      color #333;
      line-height 1rem
      text-indent 1rem

    .list
      float left
      height:100%

      .list-name
        width 1.5rem
        height 1rem
        text-align center
        line-height 1rem
        border-bottom 1px solid #7a43b6
        font-size 0.3rem
        color #3c3c3c

      .list-name.current
        background-color: #fff
        border-right none

    .show-container
      position relative
      float right
      overflow hidden
      width 6.5rem
      height calc(100% - 1rem)
      background-color: #fff

      .show
        position absolute
        left: 0
        top 0
        width 100%
        height: auto

        >div
          float: left
          padding 0.3rem
          width 50%
          height 5rem

          img
            display block
            margin 0.2rem auto
            width 80%
            height:2rem

          p
            max-height:1.5rem
            text-align center
            overflow hidden
            text-overflow ellipsis

.scroll-data
  padding-top 1.8rem
  width 100%
  height auto
  background-color: #eee

  .scroll-container
    width 100%
    transform translateX(0) translateY(0px)

    .module

      .map
        display -webkit-box
        -webkit-box-orient horizontal
        box-sizing border-box
        width: 100%
        background-color: #fff

        .map-column
          -webkit-box-sizing border-box
          -moz-box-sizing border-box
          box-sizing flex
          -webkit-flex 1
          -moz-box-flex 1
          flex auto
          padding 0.311rem
          height 100%
          text-align center

          img
            display block
            margin 0.13333rem auto
            width 1rem
            height: 1rem

    .carousel
      width 100%
      height 4.45333rem
      overflow hidden

      ul
        height 100%
        width 50rem
        margin-bottom 0



        li
          float left
          height 100%
          width: 10rem

          a
            display block
            width 100%
            height: 100%

            img
              display block
              margin 0 auto;
              height: 100%;

  .hot-item
    width 100%
    margin-top 1rem
    background-color: #fff

    .hot-head
      height 1rem
      width: 100%
      line-height 1rem
      text-align center
      font-weight bold
      color orange
      background url("https://img.alicdn.com/tps/TB1t9n6LFXXXXaXXXXXXXXXXXXX-60-60.png") no-repeat 38% center
      background-size contain
    
    .item-column
      float left
      box-sizing border-box
      margin 0.2rem 5% 0 5%
      padding-bottom:0.4rem
      width 40%

      img
        width 100%
        margin-bottom 0.2rem

      span
        display block
        max-width 100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        text-align center
        color #3c3c3c

.back-top
  position fixed
  bottom 1rem
  right 1rem
  display none
  width 1rem
  height 1rem

  img
    width: 100%
    height 100%

