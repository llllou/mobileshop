body
  background-color: #eee

header
  margin-bottom 0.3rem
  height: 1.7333rem
  width: 10rem
  background-color: #f7f7f8;

  h3
    font-size 0.5rem
    text-align center
    line-height 1.7333rem;

.container

    >div:first-child
      display: -webkit-box
      display -webkit-flex
      display -ms-flexbox
      display flex
      flex-direction column
      width 100%
      height 3.5rem
      background-color: #fff

      .column
        box-sizing border-box
        -webkit-flex: 1
        -moz-webkit-flex: 1
        -ms-webkit-flex: 1
        -o-webkit-flex: 1
        flex:;1
        width 100%
        padding: .373333rem .266667rem;
        border-bottom 1px solid #ddd

        p
          float left
          width 20%
          height 100%
          padding-top 0.3rem
          font-size 0.4rem

        input
          float right
          width 80%
          height 100%
          line-height 100%
          text-indent 1rem
          border none
          outline none

    >div:nth-child(2)
      width 100%
      height 2rem
      margin-top: 1rem
      box-align center

      submit
        display block
        margin 0 auto
        width 6rem
        height 1rem
        border-radius 0.5rem
        color white
        background-color: #ff0036;
        line-height 1rem
        font-size 0.5rem
        text-align center

    >div:last-child
      padding 0 2rem

      p
        width 100%
        height 1rem

        a
          float left
          font-size 0.5rem
          text-decoration none
          color #f0ad4e

        span
          float right
          font-size 0.5rem
          color #00b3ee

      button
        display block
        margin 1.5rem auto
        padding 0.4rem
        border: 1px solid red
        border-radius 0.2rem
        font-size 0.5rem
        background-color: transparent
        color red

.alert
  display none
  position absolute
  z-index 99
  top 30%
  left 1rem
  width 8rem
  height 7rem
  background-color: #fff
  border:1px solid #00b3ee

  .up
    width 100%
    height 1rem
    background-color: #00b3ee

    .icon
      float right
      display block
      margin 0.25rem
      width 0.5rem
      height 0.5rem
      background url(../img/Close_24px_1161619_easyicon.net.png) no-repeat 0 0
      background-size contain



  .down
    width: 100%
    height 6rem
    background-color: #fff

    p
      padding 30%
      font-size 0.4rem
      text-align center

.mask
  display: none
  content ''
  position absolute
  z-index 9
  top 0
  left: 0
  width 100%
  height 100%
  background-color: rgba(0,0,0,0.3)







